@model Product
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        Order Registration
    </div>
    <div class="card-body">
        <form method="post" asp-action="Index">
            <div class="form-group">
                <label>Product</label>
                <input type="text" class="form-control" placeholder="Product Name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Cost</label>
                <input type="number" class="form-control col-md-3" placeholder="Product Cost" asp-for="Cost">
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Quantity</label>
                <input type="number" class="form-control col-md-3" placeholder="Product Quantity" asp-for="Quantity">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="3" asp-for="Description"></textarea>

            </div>
            <button type="submit" class="btn btn-success">Purchase</button>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}